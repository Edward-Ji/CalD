# Maintainer: Edward Ji <ziji4098@uni.sydney.edu.au>

pkgname="cald"
pkgver="1.0"
pkgrel=0
pkgdesc="A simple command line calendar application"
url="https://github.sydney.edu.au/ttho6664/2021_INFO1112_A2"
arch="all"
license="nolicense"
depends="python3"
source="
	cald.initd
    daemon.py
    calendar.py
    calendar
"
install="
	$pkgname.post-install
	$pkgname.pre-deinstall
"
builddir="$srcdir/"

package() {
	install -m755 -D "$srcdir"/$pkgname.initd \
		"$pkgdir"/etc/init.d/$pkgname
	install -m644 -D "$srcdir"/daemon.py \
		"$pkgdir"/usr/lib/cald/daemon.py
	install -m644 -D "$srcdir"/calendar.py \
		"$pkgdir"/usr/lib/cald/calendar.py
    install -m777 -D "$srcdir"/calendar \
        "$pkgdir"/usr/bin/calendar
}
